{
    "name": "xomo",
    "description": "A Phaser 3 game",
    "version": "0.1.0",
    "type": "module",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/phaserjs/template-vite.git"
    },
    "author": "Tomas Masnik",
    "scripts": {
        "dev": "node log.js dev & vite --config vite/config.dev.mjs",
        "build": "node log.js build & vite build --config vite/config.prod.mjs",
        "dev-nolog": "vite --config vite/config.dev.mjs",
        "build-nolog": "vite build --config vite/config.prod.mjs",
        "test": "jest",
        "test:watch": "jest --watch",
        "typecheck": "tsc --noEmit"
    },
    "devDependencies": {
        "@types/jest": "^29.5.12",
        "@types/node": "^20.11.30",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "terser": "^5.39.0",
        "ts-jest": "^29.1.1",
        "typescript": "^5.4.5",
        "vite": "^6.3.1"
    },
    "dependencies": {
        "phaser": "^3.90.0"
    },
    "jest": {
        "preset": "ts-jest/presets/default-esm",
        "testEnvironment": "node",
        "transform": {
            "^.+\\.[tj]sx?$": ["ts-jest", { "useESM": true }]
        },
        "extensionsToTreatAsEsm": [".ts"],
        "globals": {
            "ts-jest": {
                "useESM": true
            }
        },
        "moduleNameMapper": {
            "^(\\.{1,2}/.*)\\.js$": "$1"
        }
    }
}
